@page "/about"
@layout FinalProject.Components.Layout.LandingLayout.Landing1

<div class="container my-5">
    <div class="text-center">
        <h2 class="fw-bold text-primary">About Our Vaccination Program</h2>
        <p class="text-muted">
            Our mission is to provide accurate and up-to-date information about vaccines,
            their benefits, and how you can protect yourself and your loved ones.
        </p>
    </div>

    <div class="row justify-content-center">
        <!-- Why Vaccination Matters -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm p-4 mb-4">
                <h3 class="text-primary"><i class="bi bi-shield-check"></i> Why Vaccination Matters?</h3>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><i class="bi bi-check-circle text-success"></i> Prevents serious diseases and protects public health.</li>
                    <li class="list-group-item"><i class="bi bi-check-circle text-success"></i> Reduces the spread of infectious diseases in communities.</li>
                    <li class="list-group-item"><i class="bi bi-check-circle text-success"></i> Safe and effective way to boost immunity.</li>
                </ul>
            </div>
        </div>

        <!-- Our Services -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm p-4 mb-4">
                <h3 class="text-primary"><i class="bi bi-briefcase-medical"></i> Our Services</h3>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><i class="bi bi-geo-alt text-danger"></i> Find nearby vaccination centers.</li>
                    <li class="list-group-item"><i class="bi bi-calendar-check text-success"></i> Schedule and manage vaccine appointments.</li>
                    <li class="list-group-item"><i class="bi bi-bell text-warning"></i> Stay informed with the latest vaccine updates.</li>
                </ul>
            </div>
        </div>

        <!-- Contact Us -->
        <div class="col-lg-8 text-center">
            <div class="card border-0 shadow-sm p-4">
                <h3 class="text-primary"><i class="bi bi-envelope"></i> Contact Us</h3>
                <p>If you have any questions, feel free to <a href="/contact" class="text-decoration-none fw-bold">contact us</a>.</p>
                <a href="/" class="btn btn-primary px-4"><i class="bi bi-chat-dots"></i> Get in Touch</a>
            </div>
        </div>
    </div>
</div>
