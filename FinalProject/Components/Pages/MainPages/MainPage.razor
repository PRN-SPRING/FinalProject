@page "/"
@layout FinalProject.Components.Layout.LandingLayout.Landing1

<!-- Import Bootstrap -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container-fluid p-0">
    <!-- Carousel -->
    <div id="vaccineCarousel" class="carousel slide" data-bs-ride="carousel">
        <!-- Indicators -->
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#vaccineCarousel" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#vaccineCarousel" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#vaccineCarousel" data-bs-slide-to="2"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/assets/cartoon.jpeg" class="d-block w-100" max-width: 100% style="height: 700px; object-fit: cover;" alt="Vaccine Image 1">
            </div>
            <div class="carousel-item">
                <img src="/assets/doctors.jpeg" class="d-block w-100" max-width: 100% style="height: 700px; object-fit: cover;" alt="Vaccine Image 2">
            </div>
            <div class="carousel-item">
                <img src="/assets/vaccines.jpeg" class="d-block w-100" max-width: 100% style="height: 700px; object-fit: cover;" alt="Vaccine Image 3">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#vaccineCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#vaccineCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
    <!-- Hero Section -->
    <section class="text-center py-5 bg-primary text-white">
        <div class="container">
            <h1 class="fw-bold">Chăm sóc sức khỏe với VaccineCare</h1>
            <p class="lead">Dễ dàng đặt lịch tiêm chủng và theo dõi lịch trình tiêm của con bạn.</p>
            <a class="btn btn-lg btn-light fw-bold" href="/schedule">Đặt lịch ngay</a>
        </div>
    </section>

    <!-- How It Works -->
    <section class="container my-5">
        <h2 class="text-center mb-4">Cách thức hoạt động</h2>
        <div class="row text-center">
            <div class="col-md-4">
                <h4>Chọn loại vắc xin</h4>
                <p>Chọn tiêm lẻ hoặc gói phù hợp cho con bạn.</p>
            </div>
            <div class="col-md-4">
                <h4>Đặt lịch hẹn</h4>
                <p>Chọn thời gian phù hợp.</p>
            </div>
            <div class="col-md-4">
                <h4>Hoàn thành tiêm chủng</h4>
                <p>Đến trung tâm đúng lịch để tiêm chủng.</p>
            </div>
        </div>
    </section>

    <!-- Benefits of Vaccination -->
    <section class="container my-5 p-4 bg-light rounded shadow-sm">
        <h2 class="text-center mb-4">Lợi ích của tiêm chủng</h2>
        <div class="row">
            <div class="col-md-4 text-center">
                <p class="fw-semibold">Bảo vệ trẻ khỏi các bệnh nguy hiểm</p>
            </div>
            <div class="col-md-4 text-center">
                <p class="fw-semibold">Tăng cường miễn dịch</p>
            </div>
            <div class="col-md-4 text-center">
                <p class="fw-semibold">Được theo dõi và nhắc nhở lịch tiêm</p>
            </div>
        </div>
    </section>


    <!-- Testimonials -->
    <section class="container my-5">
        <h2 class="text-center mb-4">Phản hồi từ phụ huynh</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card p-3 shadow-sm">
                    <p class="fst-italic">"Dịch vụ rất tốt! Tôi không còn lo lắng về lịch tiêm của con nữa."</p>
                    <footer class="text-end fw-semibold">— Nguyễn Thị Mai</footer>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-3 shadow-sm">
                    <p class="fst-italic">"Tiêm chủng trở nên dễ dàng hơn bao giờ hết. Rất hài lòng!"</p>
                    <footer class="text-end fw-semibold">— Trần Văn An</footer>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-3 shadow-sm">
                    <p class="fst-italic">"Nhắc nhở lịch tiêm cực kỳ hữu ích, tôi không bao giờ quên lịch hẹn!"</p>
                    <footer class="text-end fw-semibold">— Lê Minh Hương</footer>
                </div>
            </div>
        </div>
    </section>

    <!-- FAQ Section -->
    <section class="container my-5">
        <h2 class="text-center mb-4">Câu hỏi thường gặp</h2>
        <div class="accordion" id="faqAccordion">
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                        Làm thế nào để đặt lịch tiêm?
                    </button>
                </h2>
                <div id="faq1" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        Bạn có thể đặt lịch qua trang chủ bằng cách nhấn vào nút "Đặt lịch ngay".
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                        Tôi có thể hủy lịch tiêm không?
                    </button>
                </h2>
                <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        Có, bạn có thể hủy hoặc thay đổi lịch trước 24 giờ.
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<!-- Import Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
