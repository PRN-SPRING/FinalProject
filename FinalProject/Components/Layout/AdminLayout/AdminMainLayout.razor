@inherits LayoutComponentBase
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject IHttpContextAccessor HttpContextAccessor

<div class="d-flex flex-column min-vh-100">
    <!-- ✅ Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
        <div class="container">
            <a class="navbar-brand fw-bold text-primary" href="/">
                <i class="bi bi-shield-plus"></i> VaccineCare
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @foreach (var item in new[] {
                    new { Name = "Home", Url = "/admin" },
                    new { Name = "Add User", Url = "/admin/user/create" } })
                    {
                        <li class="nav-item">
                            <a class="nav-link @(Navigation.Uri.EndsWith(item.Url) ? "active fw-bold text-primary" : "")" href="@item.Url">
                                @item.Name
                            </a>
                        </li>
                    }
                </ul>
                <div class="d-flex align-items-center ms-lg-3 mt-2 mt-lg-0">
                    <span class="me-3 fw-bold">
                        <i class="bi bi-person-circle"></i> Hello, Admin
                    </span>
                    <a class="btn btn-outline-danger" href="/logout">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- ✅ Styled Main Content -->
    <main>
                <article class="content">
                    @Body
                </article>
    </main>
</div>



<!-- ✅ Import Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
<!-- ✅ Import Bootstrap -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>